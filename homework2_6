using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homework2_6
{
    class Program
    {
        static void Main(string[] args)
        {
            string userName;
            char symbolOne;
            string lineSymbol;

            Console.Write("Введите ваше имя: ");
            userName = Console.ReadLine();
            
            Console.Write("Введите один символ: ");
            symbolOne = Convert.ToChar(Console.ReadLine());

            lineSymbol = new String(symbolOne, userName.Length + 2);

            Console.WriteLine(lineSymbol);
            Console.WriteLine(symbolOne + userName + symbolOne);
            Console.WriteLine(lineSymbol);
        }
    }
}
