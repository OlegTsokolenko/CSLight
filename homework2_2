using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace homework2_2
{
    class Program
    {
        static void Main(string[] args)
        {
            string command;
            bool menuСontrol = true;
 
            while (menuСontrol == true)
            {
                Console.WriteLine("Ха-Ха-Ха");
                Console.Write("Для остановки программы введите «exit»: ");
                command = Console.ReadLine();

                if (command == "exit")
                {
                    menuСontrol = false;
                    break;
                }
                else
                {
                    Console.WriteLine("Повторите попытку ввода");
                }
            }
        }

    }
}
